<html>
    <head>
        <title>Home Page</title>
        <link rel="stylesheet" href="/stylesheet/styles.css">
    </head>
    <body>
        <h1><%= title %></h1>
        <div class="container">
            <% for (let i = 0; i < messages.length; i++) { %>
                <div class="box">
                    <h3><%= messages[i].user %></h3>
                    <p><%= messages[i].text %></p>
                    <a href="/message/<%= i %>"><button>open</button></a>
                </div>
            <% } %>

            <a href="/new">
                <button>New Message</button>
            </a>
        </div>
    </body>
</html>